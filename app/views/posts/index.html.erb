<div class="banner">
  <div class="container">
    <h1 class="text-white pt-3">PostFree</h1>
    <p class="text-white">Where true and relevant information is made.</p>
  </div>
</div>


<div id="hub_article">
	<div id="main_container">
		<div id="title_page" class="text-center">All of my articles</div>
		<div id="container">
		<hr>
        <% @posts.each do |post| %>
          <div class="card_article">
            <div id="img_article">
              <a href="#"><img src="https://images.unsplash.com/photo-1522787345986-d5c7885a889e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80"/></a>
            </div>
            <div class="under_img">
              <div id="title_article">
                <span><%= post.title %></span>
              </div>
              <div id="desc_article">
                <span><%= post.content.first(100)%>...</span>
              </div>
              <div>
              <%= link_to "Read more", post_path(post), class: "btn btn-secondary button_article" %>
              </div>
            </div>
          </div>
        <% end %>
		</div>
	</div>
</div>
